
@model IEnumerable<WebLoja.Models.Produto>
@{
    ViewData["Title"] = "Home Page";
}

<form>
    <hr class="divider-w">
    <section class="module-small">
        <div class="container">
            <div class="row multi-columns-row">
                @foreach (var produto in Model)
                {
                    <div class="col-sm-6 col-md-3 col-lg-3">
                        <div class="shop-item">
                            <div class="shop-item-image">
                                <img src="@produto.ProdutoFoto" alt="Accessories Pack" />
                                <div class="shop-item-detail"><a asp-controller="PreCarrinho" asp-action="Index" asp-route-id="@produto.ProdutoId" class="btn btn btn-block btn-round btn-b"><i class="fa fa-shopping-cart"></i> Detalhes</a></div>
                            </div>
                            <h4 class="shop-item-title font-alt"><a href='#'>@produto.ProdutoNome</a></h4>R$@produto.ProdutoValor
                        </div>
                    </div>

                }
            </div>
        </div>
    </section>
</form>
