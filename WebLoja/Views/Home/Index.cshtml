                                    <div class="product-imitation">
                                        <img src="@produto.ProdutoFoto" alt="Accessories Pack" />
                                    </div>
                                    <div class="product-desc">
                                        <span class="product-price">
                                            @produto.ProdutoValor.ToString("C")
                                        </span>
                                        <small class="text-muted">Categoria: tintas</small>
                                        <a href="#" class="product-name">@produto.ProdutoNome</a>

                                        <div class="small m-t-xs">
