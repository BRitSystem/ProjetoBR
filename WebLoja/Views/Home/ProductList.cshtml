<div class="row multi-columns-row">
    @foreach (var produto in Model)
    {
        <div class="col-sm-6 col-md-3 col-lg-3">
            <div class="shop-item">
                <div class="shop-item-image">
                    <img src="@produto.ProdutoFoto" alt="Accessories Pack" />
                    <div class="shop-item-detail"><a asp-controller="PreCarrinho" asp-action="Index" asp-route-id="@produto.ProdutoId" class="btn btn-border-d btn-circle"><i class="fa fa-search"></i> Detalhes</a></div>
                </div>
                <h4 class="shop-item-title font-alt"><a href='#'>@produto.ProdutoNome</a></h4>R$@produto.ProdutoValor
            </div>
            <div style="display: flex; justify-content: center; align-items: center;"><a asp-controller="PreCarrinho" asp-action="Index" asp-route-id="@produto.ProdutoId" class="btn btn-success btn-circle" type="button"><i class="fa fa-shopping-cart"></i> Carrinho</a></div>
        </div>
    }
</div>