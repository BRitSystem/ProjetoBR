@{
    ViewData["Title"] = "Categoria";
}
<h2 class="page-title">Cadastro <small>de Categoria</small></h2>

<div class="row">
    <section class="widget">
        <div class="widget-body">
            <form>
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" id="nome" name="nome" class="form-control">
                </div>
                <a asp-controller="Categoria" asp-action="SalvarCategoria" class="btn btn-primary" style="display: inline;"><i class="fa fa-floppy-o"></i> Salvar</a>
            </form>
        </div>
    </section>
</div>